{
    "name": "boardtools/updater",
    "type": "phpbb-extension",
    "description": "Upload Extensions Updater enables you to update the extension Upload Extensions. Any other extension management can be done using Upload Extensions.",
    "homepage": "https://github.com/BoardTools/updater",
    "version": "1.0.0-beta",
    "keywords": ["boardtools", "forumhulp", "phpbb", "extension", "upload", "extensions", "update", "updater"],
    "license": "GPL-2.0",
    "authors": [
        {
            "name": "Igor Lavrov",
            "homepage": "https://github.com/lavigor",
            "role": "Developer"
        },
        {
            "name": "John Peskens",
            "homepage": "http://forumhulp.com",
            "email": "info@forumhulp.com",
            "role": "Co-developer of Upload Extensions"
        }
    ],
    "require": {
        "php": ">=5.3.3",
        "fortawesome/font-awesome": "~4.2"
    },
    "require-dev": {
        "phpbb/epv": "dev-master"
    },
    "extra": {
        "display-name": "Upload Extensions Updater",
        "soft-require": {
           "phpbb/phpbb": ">=3.1.*"
        },
        "version-check": {
            "host": "boardtools.github.io",
            "directory": "/updater",
            "filename": "updater.json"
        }
    }
}
